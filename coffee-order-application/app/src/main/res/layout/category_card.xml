<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="7dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_category_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/img_category"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.301"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/material_dynamic_tertiary90"/>

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:textSize="16sp"
            android:paddingTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/img_category"
            app:layout_constraintStart_toStartOf="@+id/img_category"
             />
        <TextView
            android:id="@+id/tv_category_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/light_purple"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_category_name"
            app:layout_constraintStart_toStartOf="@+id/img_category"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>